import re
import math

def split_taschenrechner(rechnung):


    zahlen = []
    operatoren = []
    zahl = ""
    o = ["+","-","*","/","^", "!"]
    x=True
    y=False
    
    
    for i in rechnung:
        if i.isdigit() or i == "." :
            zahl += i 
        elif i == "-"  and x==True:
            zahl += "-"
        elif i in o:
            if zahl:
                zahlen.append(float(zahl))
                zahl = ""
            operatoren.append(i)

        if i in o and y==False:
            x=True
            y=True

        if i in o and y==True:
            return "Syntax Error"
            

        elif x==True and i==" ":
            x=True
        else:
            x=False
    
    
    
    
    if zahl:
        zahlen.append(float(zahl))
    print(zahlen, operatoren)
    return zahlen, operatoren
